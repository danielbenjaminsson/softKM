/*
 * softKM Resource Definitions
 */

resource app_signature "application/x-vnd.softKM";

resource app_version {
    major  = 1,
    middle = 0,
    minor  = 0,
    variety = B_APPV_ALPHA,
    internal = 0,
    short_info = "softKM",
    long_info = "Software Keyboard/Mouse Switch for Haiku"
};

resource app_flags B_SINGLE_LAUNCH;

resource file_types message {
    "types" = "application/x-vnd.softKM"
};

/*
 * Application Icon
 *
 * To add the icon:
 * 1. Open Icon-O-Matic on Haiku
 * 2. Import softKM_icon.svg or softKM_icon_32.svg from this directory
 * 3. Adjust colors/paths if needed to match Haiku guidelines
 * 4. Export as HVIF and save to this directory as softKM_icon.hvif
 * 5. Use: resource(101, "BEOS:ICON") #'VICN' import "softKM_icon.hvif";
 *
 * Alternatively, use hvif-tools to convert:
 *   icon2icon softKM_icon.svg softKM_icon.hvif
